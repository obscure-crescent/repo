name: Receive plogons sync and update file

on:
  repository_dispatch:
    types: [sync-plogons]
  workflow_dispatch:

permissions:
  contents: write

jobs:
  sync:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout target repo
        uses: actions/checkout@v4
        with:
          fetch-depth: 0

      - name: Derive source info
        id: vars
        run: |
          echo "src_repo=${{ github.event.client_payload.repo }}" >> $GITHUB_OUTPUT
          echo "src_ref=${{ github.event.client_payload.ref }}" >> $GITHUB_OUTPUT
          echo "src_branch=${{ github.event.client_payload.branch }}" >> $GITHUB_OUTPUT

      - name: Download tpl.json from source commit
        shell: bash
        run: |
          set -euo pipefail
          SRC_REPO="${{ steps.vars.outputs.src_repo }}"
          SRC_REF="${{ steps.vars.outputs.src_ref }}"
          if [ -z "$SRC_REPO" ] || [ -z "$SRC_REF" ]; then
            echo "Missing source repo/ref in client_payload; aborting."
            exit 1
          fi
          URL="https://raw.githubusercontent.com/${SRC_REPO}/${SRC_REF}/tpl.json"
          echo "Fetching: $URL"
          curl -sSfL "$URL" -o plogons.json

      - name: Commit and push if changed
        shell: bash
        run: |
          set -euo pipefail
          if git diff --quiet -- plogons.json; then
            echo "No changes to plogons.json; nothing to commit."
            exit 0
          fi
          git config user.name "github-actions[bot]"
          git config user.email "41898282+github-actions[bot]@users.noreply.github.com"
          git add plogons.json
          git commit -m "sync: update plogons.json from ${{ steps.vars.outputs.src_repo }}@${{ steps.vars.outputs.src_ref }}"
          git push
